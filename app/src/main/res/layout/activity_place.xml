<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ayon.projetfile1.Place">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
  >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:weightSum="1">
            <Button
                android:text="Dhakha"
                android:onClick="dhaka"
                android:textSize="28dp"
                android:background="@drawable/but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:id="@+id/button1"/>

            <Button
                android:text="chittagong"
                android:onClick="chittagong"
                android:textSize="28dp"
                android:background="@drawable/but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button2" />

            <Button
                android:text="Sylhet"
                android:onClick="sylhet"
                android:textSize="28dp"
                android:background="@drawable/but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3" />

            <Button
                android:text="khulna"
                android:onClick="khulna"
                android:textSize="28dp"
                android:background="@drawable/but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button4" />

            <Button
                android:text="Rajshahi"
                android:onClick="rajshahi"
                android:textSize="28dp"
                android:background="@drawable/but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button5" />

            <Button
                android:text="Barisal"
                android:onClick="borishal"
                android:textSize="28dp"
                android:background="@drawable/but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button6" />

            <Button
                android:text="Rangpur"
                android:onClick="rongpur"
                android:textSize="28dp"
                android:background="@drawable/but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button7"
                 />
            <Button
                android:text="Mymensingh"
                android:onClick="mymansign"
                android:textSize="28dp"
                android:background="@drawable/but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button8"
                />
            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button9"
                android:layout_weight="0.11" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
