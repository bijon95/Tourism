<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comments"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.ayon.projetfile1.Comments"
    android:layout_width="match_parent">




    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:text="Leave a Reply"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"

        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="text"
            android:id="@+id/cmtNme"
            android:hint="Name:"
            android:background="#c1bcbc"
            android:layout_marginBottom="10dp"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/editText2"
        android:hint="email:"
        android:background="#c1bcbc"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Yout Comment:"
        android:id="@+id/editText3"
        android:background="#c1bcbc"
        />

    <Button
        android:layout_marginTop="20dp"
        android:background="@drawable/btnbg2"
        android:text="Submit"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:id="@+id/button" />

        <Button
            android:layout_marginTop="20dp"
            android:background="@drawable/btnbg2"
            android:text="View Comments"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnview" />


</LinearLayout>

</LinearLayout>

